{
  "private": true,
  "name": "@tonic-ui/react-docs",
  "version": "1.7.1",
  "description": "A documentation site for React Tonic UI component library.",
  "scripts": {
    "build": "bash -c '. ./tonic-ui.env && ./update-docs.sh && cross-env NODE_ENV=production next build' && next export --outdir dist/react",
    "clean": "del build coverage dist",
    "dev": "bash -c '. ./tonic-ui.env && ./update-docs.sh && next dev --hostname 0.0.0.0'",
    "eslint": "eslint --ext .js,.jsx,.mjs .",
    "pre-push": "bash -c 'echo -e \"=> \\e[1;33m$npm_package_name\\e[0m\"' && yarn run eslint && yarn run test",
    "start": "next start",
    "test": "jest --maxWorkers=2 --passWithNoTests"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.0.0",
    "@babel/eslint-plugin": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@emotion/babel-preset-css-prop": "^11.10.0",
    "@emotion/jest": "^11.10.0",
    "@emotion/react": "11.x",
    "@emotion/styled": "11.x",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@next/mdx": "^12.3.1",
    "@tonic-ui/react": "^1.7.1",
    "@tonic-ui/react-hooks": "^1.4.1",
    "@tonic-ui/react-lab": "^0.5.1",
    "@tonic-ui/styled-system": "^1.3.1",
    "@tonic-ui/theme": "^1.2.1",
    "@trendmicro/babel-config": "^1.0.2",
    "boolean": "^3.2.0",
    "cross-env": "^7.0.3",
    "date-fns": "2.x",
    "del-cli": "^5.0.0",
    "dotenv-flow": "^3.2.0",
    "ensure-type": "^1.5.1",
    "eslint": "^8.25.0",
    "eslint-config-next": "^12.3.1",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-react": "latest",
    "immutability-helper": "^3.1.1",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lodash": "^4.17.21",
    "lorem-ipsum": "^2.0.8",
    "next": "^12.3.1",
    "node-emoji": "^1.11.0",
    "prism-react-renderer": "^1.3.5",
    "prop-types": "15.x",
    "react": "^16.8.0 || ^17 || ^18",
    "react-beautiful-dnd": "^13.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^16.8.0 || ^17 || ^18",
    "react-ga": "^3.3.1",
    "react-live": "^3.1.1",
    "react-movable": "^3.0.4",
    "react-table": "^7.8.0",
    "react-virtualized": "^9.22.3",
    "remark-emoji": "^3.0.2",
    "remark-images": "^3.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.{js,jsx}",
      "<rootDir>/pages/**/*.{js,jsx}",
      "<rootDir>/shared/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "setupFiles": [],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.js"
    ]
  }
}
