{
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": ["master","v0"],
      "changelog": true,
      "conventionalCommits": false,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md",
    "**/package-lock.json",
    "**/yarn.lock"
  ]
}
