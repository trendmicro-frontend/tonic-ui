{
  "npmClient": "yarn",
  "npmClientArgs": [],
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "v0"
      ],
      "changelog": true,
      "conventionalCommits": false,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md",
    "**/package-lock.json",
    "**/yarn.lock"
  ],
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
